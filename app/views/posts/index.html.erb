

<%= render 'shared/banner' %>

<div class="container">
  <div class="cards">
    <% @posts.each do |post| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1494859780588-cf6063220793?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=677&q=80)">
        <%= link_to post.title, post %>
      </div>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
