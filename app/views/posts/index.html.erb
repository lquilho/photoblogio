<%= render 'shared/banner' %>

<div class="container">
  <div class="cards">
    <% @posts.each do |post| %>
      <div class="card-category" style="background-image: url(<%= post.photos.first.cloud_id  %>)">
        <%= link_to post.title, post %>
      </div>
    <% end %>
  </div>
</div>

