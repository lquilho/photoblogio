<div class="home-banner index-banner">

  <h2>Photography portfolio</h2>

  <!-- scrool down button -->
  <section id="section04" class="demo">
    <a href="#"><span></span>Scroll</a>
  </section>
</div>

<div class="card-container">
  <div class="cards">
    <% @posts.each do |post| %>
      <%= link_to post do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= post.photos.first.cloud_id  %>)"><%= post.title %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %> |
  <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
<% end %>
