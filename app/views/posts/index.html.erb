<%= render 'shared/banner' %>

<div class="card-container">
  <div class="cards">
    <% @posts.each do |post| %>
      <%= link_to post do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url(<%= post.photos.first.cloud_id  %>)"><%= post.title %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'New Post', new_post_path %>
